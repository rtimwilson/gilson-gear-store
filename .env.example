# ===========================================
# Gil-Son Merch Store — Environment Variables
# ===========================================
# Copy this to .env.local and fill in your values.
# NEVER commit this file to Git.

# Printful (get from Dashboard → Settings → API)
PRINTFUL_API_KEY=

# Stripe (get from Dashboard → Developers → API keys)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Database (Vercel Postgres, Supabase, or local)
DATABASE_URL=postgresql://...

# Auth
NEXTAUTH_SECRET=           # Generate with: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000

# AI (for customer service chatbot)
ANTHROPIC_API_KEY=sk-ant-...

# Email (Resend)
RESEND_API_KEY=re_...

# App
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_CURRENCY=CAD
